<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/pizza"
        >
    <TextView
            android:id="@+id/hello_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Hello, today your friends are sharing"
            />
    <TextView
            android:id="@+id/textViewMeal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Soup"
            />
    <TextView
            android:id="@+id/textStatusTV"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />

    <Button
            android:id="@+id/buttonBookMeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book"
            android:onClick="bookMeal"/>
</LinearLayout>

